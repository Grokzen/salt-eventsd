#!/usr/bin/python2.5

# Import libs
import sys 
from salteventsd import SaltEventsDaemon

def main():
    daemon = SaltEventsDaemon()

    if( len(sys.argv) > 1): 

        if( sys.argv[1] == 'start' ):
            daemon.start()

        elif( sys.argv[1] == 'fg' ):
            daemon.listen()

        else:
            sys.exit(0)

if __name__ == '__main__':
    main()
